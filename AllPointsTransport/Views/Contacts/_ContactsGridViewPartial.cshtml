@{
	var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "ContactsGridView";
        settings.CallbackRouteValues = new { Controller = "Contacts", Action = "ContactsGridViewPartial" };

				settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "Contacts", Action = "ContactsGridViewPartialAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "Contacts", Action = "ContactsGridViewPartialUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "Contacts", Action = "ContactsGridViewPartialDelete" };
        settings.SettingsEditing.Mode = GridViewEditingMode.Inline;
        settings.SettingsBehavior.ConfirmDelete = true;

		settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowNewButton = true;
        settings.CommandColumn.ShowDeleteButton = true;
        settings.CommandColumn.ShowEditButton = true;

		settings.KeyFieldName = "ContactID";

		settings.SettingsPager.Visible = true;
		settings.Settings.ShowGroupPanel = false;
		settings.Settings.ShowFilterRow = true;
		settings.SettingsBehavior.AllowSelectByRowClick = true;

		settings.SettingsAdaptivity.AdaptivityMode = GridViewAdaptivityMode.Off;
		settings.SettingsAdaptivity.AdaptiveColumnPosition = GridViewAdaptiveColumnPosition.Right;
		settings.SettingsAdaptivity.AdaptiveDetailColumnCount = 1;
		settings.SettingsAdaptivity.AllowOnlyOneAdaptiveDetailExpanded = false;
		settings.SettingsAdaptivity.HideDataCellsAtWindowInnerWidth = 0;

				settings.Columns.Add("Active");
				settings.Columns.Add("Company");
				settings.Columns.Add("BillTo");
				settings.Columns.Add("Broker");
				settings.Columns.Add("EquipmentProvider");
				settings.Columns.Add("ChassisProvider");
				settings.Columns.Add("Location");
				settings.Columns.Add("RailPort");
				settings.Columns.Add("CYDepot");
				settings.Columns.Add("DallasDY");
				settings.Columns.Add("FtWorthDY");
				settings.Columns.Add("Vendor");
				settings.Columns.Add("Description");
				settings.Columns.Add("Contact1");
				settings.Columns.Add("Phone1");
				settings.Columns.Add("Email1");
				settings.Columns.Add("Contact2");
				settings.Columns.Add("Phone2");
				settings.Columns.Add("Email2");
				settings.Columns.Add("Fax");
				settings.Columns.Add("Address1");
				settings.Columns.Add("Address2");
				settings.Columns.Add("City");
				settings.Columns.Add("State");
				settings.Columns.Add("Zip");
				settings.Columns.Add("BillingCode");
				settings.Columns.Add("CCType");
				settings.Columns.Add("CCNum");
				settings.Columns.Add("CCExpiration");
				settings.Columns.Add("CCSecurityCode");
				settings.Columns.Add("CCCardholder");
				settings.Columns.Add("CCBillingStreet");
				settings.Columns.Add("CCBillingZip");
				settings.Columns.Add("MC");
				settings.Columns.Add("Notes");
				settings.Columns.Add("TotalCredit");
				settings.Columns.Add("DateCreated");
				settings.Columns.Add("CreatedBy");
				settings.Columns.Add("LastUpdated");
				settings.Columns.Add("UpdatedBy");
			});
		if (ViewData["EditError"] != null){
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()